            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.SocialSecurityNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.SocialSecurityNumber)
            </dd>
